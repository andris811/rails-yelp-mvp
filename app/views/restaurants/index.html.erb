<div class="container mt-2">
  <h1>Restaurants</h1>
  <% @restaurants.each do |restaurant| %>
    <div class="card mt-3">
      <div class="card-body">
        <h2 class="card-title"><%= link_to restaurant.name, restaurant %></h2>
        <p class="card-text">
          <%= restaurant.category %></br>
          <%= restaurant.address %></br>
          <%= restaurant.phone_number %>
        </p>
      </div>
    </div>
  <% end %>
</div>
